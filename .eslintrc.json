{
  "root": true,
  "plugins": ["@typescript-eslint", "prettier"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "import/extensions": [".ts"],
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "/"],
        "extensions": [".ts"]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "airbnb-base",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off"
  }
}
